import numpy as np
def linear_interpolation(x, x1, y1, x2, y2):
    slope = (y2 - y1) / (x2 - x1)
    y = y1 + slope * (x - x1)
    return y

x1 = 2.00
y1 = 7.2
x2 = 4.25
y2 = 7.1
x = 4.0
result = linear_interpolation(x, x1, y1, x2, y2)
print(f"The value of y at x = {x} is approximately: {result:.2f}")

